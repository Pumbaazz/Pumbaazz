{
    "editor.inlineSuggest.enabled": true,
    "workbench.iconTheme": "vscode-icons",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "editor.fontFamily": "'Fira Code Medium', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.mouseWheelZoom": true,
    "files.autoSave": "afterDelay",
    "workbench.colorCustomizations": {
        // Find match
        "editor.findMatchBackground": "#000000",
        "editor.findMatchBorder": "#ffff00cc",
        "editor.findMatchHighlightBackground": "#ec02e45e",
        "editor.findMatchHighlightBorder": "#ff000080",
        // Line highlight
        "editor.lineHighlightBackground": "#ffffff00",
        "editor.lineHighlightBorder": "#ffffff00",
        // Selection
        "editor.selectionBackground": "#cbd50966",
        "editor.selectionHighlightBackground": "#cbd50966",
        "editor.selectionHighlightBorder": "#ff0000",
        // Word highlight
        "editor.wordHighlightBackground": "#ffffff00",
        "editor.wordHighlightBorder": "#ffffff44",
        // Cursor
        "editorCursor.foreground": "#ffff00",
        // Debug
        // "statusBar.debuggingBackground": "#410d18",
        // "statusBar.debuggingForeground": "#dddddd",
    },
    "workbench.colorTheme": "Default Dark+",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "[markdown]": {
        "editor.defaultFormatter": "darkriszty.markdown-table-prettify"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
}
